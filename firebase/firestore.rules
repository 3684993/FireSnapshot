service cloud.firestore {
  match /databases/{database}/documents {
    match /mocks/{mockID} {
      allow read, write;
    }

    match /users/{userID} {
      allow read, write;

      match /posts/{postID} {
        allow read, write;
      }
    }

    match /tasks/{taskID} {
      allow read, write;
    }
  }
}